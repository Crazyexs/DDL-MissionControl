{
  "application": {
    "name": "DDL MISSION CONTROL ",
    "author": "Team",
    "license": "CC BY-NC-SA 3.0",
    "description": "Ground Station for CanSat (1 Hz telemetry, CSV, SIM mode).",
    "icon_path": "ddl/ui/resources/icons/app_icon.ico",
    "settings": {
      "command_prefix": "/",
      "logs_folder": "./saves",
      "on_start_maximized": true,
      "on_start_port_update": true,
      "team_id": "1043",
      "no_tabs_ui": true,
      "theme": {
        "background": "#FAFAFA",
        "text": "#111111",
        "font_point_min": 14,
        "plot_axes_bold": true,
        "plot_traces_bold": true
      }
    }
  },
  "version": { "version": "0.0.1", "status": "BETA" },
  "connection": {
    "alarm": true,
    "filter_character": "",
    "time_out": 2,
    "bauds_default": "115200",
    "bauds_dic": {
      "1200": 1200, "2400": 2400, "4800": 4800, "9600": 9600,
      "19200": 19200, "38400": 38400, "57600": 57600, "115200": 115200
    }
  },
  "telemetry": {
    "rate_hz": 1,
    "csv": {
      "enable": true,
      "filename_pattern": "Flight_${TEAM_ID}.csv",
      "include_header": true,
      "header": [
        "TEAM_ID","MISSION_TIME","PACKET_COUNT","MODE","STATE","ALTITUDE",
        "TEMPERATURE","PRESSURE","VOLTAGE",
        "GYRO_R","GYRO_P","GYRO_Y",
        "ACCEL_R","ACCEL_P","ACCEL_Y",
        "MAG_R","MAG_P","MAG_Y",
        "AUTO_GYRO_ROTATION_RATE",
        "GPS_TIME","GPS_ALTITUDE","GPS_LATITUDE","GPS_LONGITUDE","GPS_SATS",
        "CMD_ECHO"
      ]
    },
    "state_allowlist": [
      "LAUNCH_PAD","ASCENT","APOGEE","DESCENT","PROBE_RELEASE","PAYLOAD_RELEASE","LANDED"
    ],
    "packet_loss": { "enable": true, "show_received_count": true, "show_lost_count": true }
  },
  "graphs": {
    "default_update_time": 1.0,
    "settings": {
      "antialias": true,
      "opengl": false,
      "cupy": true,
      "numba": true,
      "segmentedLineMode": "off"
    }
  },
  "simulation": {
    "enabled": true,
    "csv_profile_path": "./sim/pressure_profile.csv",
    "csv_column": "pressure_pa",
    "tx_interval_s": 1.0
  }
}
